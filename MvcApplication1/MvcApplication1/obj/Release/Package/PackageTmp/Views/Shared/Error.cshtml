@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        @{
            HandleErrorInfo error = ViewData.Model as HandleErrorInfo;
            <h3>Actual Error: @error.Exception.Message</h3>
            <h3>Thrown from controller: @error.ControllerName, action: @error.ActionName</h3>
            <h3>Stack trace: @error.Exception.StackTrace</h3>
            <h3>Application name: @error.Exception.Source</h3>
        }
    </hgroup>
</body>
</html>